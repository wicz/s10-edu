#!/usr/bin/env ruby

require_relative '../lib/rps'

game = Rps::Game.new
loop do
  begin
    print "Your turn. Choose one from [r, p, s]: "
    puts game.turn gets.strip.to_sym
  rescue Rps::Game::InvalidHand => e
    if e.message == :q
      puts game.statistics
      break
    else
      puts "Invalid hand!"
      retry
    end
  end
end